<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.portfolio.tire_server.mapper.TireMapper">
    <select id="findAllTires" resultType="com.portfolio.tire_server.model.TireModel">
        SELECT * FROM portfolio_tire.tire
    </select>

    <select id="findTireByIdx" resultType="com.portfolio.tire_server.model.TireModel">
        SELECT * FROM portfolio_tire.tire WHERE idx = #{idx}
    </select>

    <select id="findBrandByTireIdx" resultType="com.portfolio.tire_server.model.BrandModel">
        SELECT b.* 
        FROM portfolio_tire.brand b
        INNER JOIN portfolio_tire.tire t ON b.idx = t.brand_idx
        WHERE t.idx = #{idx}
    </select>
</mapper>
